<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/yellow"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvtop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginVertical="30dp"
        android:text="Hey! Want to know your Grades"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/maths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtop"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="30dp"
        android:ems="10"
        android:inputType="text"
        android:text="Marks in Maths"
        android:textColor="#D50000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/maths1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtop"
        android:layout_marginVertical="20dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/maths"
        android:textColor="@color/black"
        android:ems="5"
        android:inputType="number"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/physics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Marks in Physics"
        android:textSize="20sp"
        android:textColor="#D50000"
        android:textStyle="bold"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/maths"
        android:layout_marginRight="30dp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/physics2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginVertical="20dp"
       android:layout_toRightOf="@+id/physics"
        android:layout_below="@+id/maths1"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="172dp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/electrical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Marks in Electrical"
        android:textSize="20sp"
        android:textColor="#D50000"
        android:textStyle="bold"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
       android:layout_below="@+id/physics"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Marks in AI"
        android:textSize="20sp"
        android:textColor="#D50000"
        android:textStyle="bold"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/electrical"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/softskills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Marks in Soft_Skills"
        android:textSize="20sp"
        android:textColor="#D50000"
        android:textStyle="bold"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/ai"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/pps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Marks in PPS"
        android:textSize="20sp"
        android:textColor="#D50000"
        android:textStyle="bold"
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/softskills"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/pps2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginVertical="20dp"
        android:layout_toRightOf="@+id/pps"
        android:layout_below="@+id/softskills2"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="240dp"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/softskills2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginVertical="20dp"
        android:layout_toRightOf="@+id/softskills"
        android:layout_below="@id/ai2"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="308dp"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/electrical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginVertical="20dp"
        android:layout_toRightOf="@+id/electrical"
        android:layout_below="@+id/physics2"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="377dp"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/ai2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginVertical="20dp"
        android:layout_toRightOf="@+id/ai"
        android:layout_below="@+id/electrical2"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="445dp"
        tools:ignore="RtlHardcoded" />


    <Button
        android:id="@+id/button1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pps2"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#020202"
        android:text="Calculate"
        android:textStyle="bold"

        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="14dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/black"/>


</RelativeLayout>